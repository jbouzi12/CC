        <div class="col-sm-3">
          <%= link_to(image_tag("nvacare-rg.png", :class => "sponsor")) %>
        </div>
        <div class="col-sm-3">
          <%= link_to(image_tag("fisher-paykel-rg.png", :class => "sponsor")) %>
        </div>
        <div class="col-sm-3">
          <%= link_to(image_tag("Ppari-logo-rg.jpg", :class => "sponsor")) %>
        </div>
      </div>

      <div class="second-sponsrow">
        <div class="col-sm-4">
          <%= link_to(image_tag("Philips-rg.png", :class => "sponsor")) %>
        </div>
        <div class="col-sm-4">
